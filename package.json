{
  "name": "epn-markdown-editor",
  "version": "1.0.1",
  "keywords": [
    "react",
    "nextjs",
    "javascript",
    "typescript",
    "jsx",
    "tsx",
    "ssr",
    "markdown",
    "editor",
    "theme",
    "html"
  ],
  "description": "Markdown editor for react, developed by jsx and typescript, dark theme、beautify content by prettier、render articles directly、paste or clip the picture and upload it...",
  "author": {
    "name": "XiangLiAn627",
    "url": "https://github.com/XiangLiAn627"
  },
  "homepage": "https://github.com/XiangLiAn627/epn-markdown-editor/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XiangLiAn627/epn-markdown-editor/epn-markdown-editor.git"
  },
  "bugs": {
    "url": "https://github.com/XiangLiAn627/epn-markdown-editor/issues"
  },
  "files": [
    "lib"
  ],
  "type": "module",
  "types": "./lib/MdEditor/Editor.d.ts",
  "module": "./lib/epn-markdown-editor.es.js",
  "exports": {
    ".": {
      "import": "./lib/epn-markdown-editor.es.js"
    },
    "./lib/style.css": "./lib/style.css"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:preview": "vite build --mode=preview"
  },
  "dependencies": {
    "@types/marked": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@types/katex": "^0.14.0",
    "@types/mermaid": "^8.2.9",
    "@types/node": "16",
    "@types/prettier": "^2.6.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vavt/markdown-theme": "^1.0.2",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "axios": "^0.27.2",
    "copy-to-clipboard": "^3.3.1",
    "cropperjs": "^1.5.12",
    "eslint": "^8.15.0",
    "eslint-config-alloy": "^4.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "highlight.js": "^11.0.1",
    "katex": "^0.15.3",
    "less": "^4.1.1",
    "marked": "^4.0.15",
    "medium-zoom": "^1.0.6",
    "mermaid": "^9.1.0",
    "multiparty": "^4.2.2",
    "prettier": "^2.3.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "screenfull": "^6.0.1",
    "ts-morph": "^14.0.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vite-plugin-dts": "^0.9.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "printWidth": 90,
    "proseWrap": "never",
    "endOfLine": "auto"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
